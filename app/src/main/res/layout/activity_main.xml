<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonViewMap"
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_marginBottom="200dp"
        android:onClick="openViewMapActivity"
        android:text="View Map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonViewMemories"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonAddMemory"
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_marginTop="200dp"
        android:onClick="openAddMemoryActivity"
        android:text="Add Memory Location"
        app:layout_constraintBottom_toTopOf="@+id/buttonViewMemories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/buttonViewMemories"
        android:layout_width="299dp"
        android:layout_height="87dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:onClick="openViewMemoriesActivity"
        android:text="View Memories"
        app:layout_constraintBottom_toTopOf="@+id/buttonViewMap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddMemory"
        app:layout_constraintVertical_bias="0.5

" />
</androidx.constraintlayout.widget.ConstraintLayout>